extends layout

block body
  div(ng-controller='AppCtrl' ng-cloak)
    div.welcome-box(layout="column" layout-align="center center" ng-if="!hideWelcomeBox")
      div Hello {{name}}
      div
        md-button.md-primary.md-raised(ng-click="gotoTasks()") Go to today's task list

    div(ng-view)

  //vendors
  script(src='js/lib/angular/angular.js')
  script(src='js/lib/angular-route/angular-route.js')
  script(src='js/lib/angular-material/angular-material.js')
  script(src='js/lib/angular-animate/angular-animate.js')
  script(src='js/lib/angular-aria/angular-aria.js')
  script(src='js/lib/angular-messages/angular-messages.js')
  script(src='js/lib/lodash/lodash.js')
  script(src='js/lib/moment/moment.js')
  script(src='js/lib/moment-timezone/moment-timezone.js')
  script(src='js/lib/jquery/dist/jquery.js')

  //App files
  script(src='js/app.js')
  script(src='js/http-services.js')
  script(src='js/notification-service.js')
  script(src='js/controllers.js')
  script(src='js/filters.js')
  script(src='js/directives.js')
